  <div class="order ">
    {{#each userOrders as |order|}}
    <div class="order-card">
      <p>{{order.status}}</p>


      {{#each order.distinctProducts as |product|}}
     <div class="product-order">
       <h6>{{product.name}} Ã—  {{product.count}}</h6>
       <div class="order-img">
      <img src="{{product.img}}" alt="{{product.img}}">

       </div>
     </div>
      
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>
