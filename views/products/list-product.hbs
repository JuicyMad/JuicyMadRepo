<div class="list-content">
  <h1>Productos disponibles</h1>

</div>
<div class="container">
  <div class="row gy-3 pb-3">
    {{#each products as |product|}}
    <h3>{{product.name}}</h3>
    <div class="py-3 col-xl-3 col-md-4 col-sm-6 col-12 mb-1 mt-2 text-center">
    <div class="custom-card">
    <img src="{{product.img}}" alt="{{product.img}}-img" />
    <a href="/products/{{product.slug}}"> 
    <button type="button" class="btn btn-outline-secondary">Ver detalle</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>