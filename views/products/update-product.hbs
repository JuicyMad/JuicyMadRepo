<div class="content">

    <div class="content-form-two">
        <h2>Actualización del prodcuto</h2>

    <div class="content-form">
        <h2>Actualizar producto</h2>

        <form class="admin-form" action="/products/{{product.id}}/edit" method="POST">
            <div class="input">
                <label for="name">Nombre del producto</label>
                <input value="{{product.name}}" id="name" type="text" name="name" required />
            </div>
            <div class="input">
                <label for="propierties">Propiedades del producto</label>
                <input value="{{product.propierties}}" id="propierties" type="text" name="Propiedades" required />
            </div>
            <div class="input">
                <label for="ingredients">Ingredientes del producto</label>
                <input value="{{product.ingredients}}" id="ingredients" type="text" name="Ingredientes" required />
            </div>
            <div class="input">
                <label for="prices">Precio del producto</label>
                <input value="{{product.prices}}" id="prices" type="number" name="Precio" required />
            </div>
            <div class="input">
                <label for="images">Imágen del producto</label>
                <input value="{{product.image}}" id="images" type="files" name="Imángen" required />
            </div>
            <button class="btn btn-juicy-admin">Editar producto</button>
        </form>
    </div>
</div>